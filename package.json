{
  "name": "webpack-esmodule-example",
  "description": "Using webpack for both modern and legacy browsers, at the same time.",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "serve target/prod",
    "prebuild": "run-s clean",
    "clean": "rimraf target",
    "build": "webpack --config=webpack.config.prod.js",
    "postbuild": "merge-html target/prod/index-modern.html target/prod/index-legacy.html > target/prod/index.html && rimraf target/prod/index-modern.html target/prod/index-legacy.html",
    "build:modern": "webpack --config=webpack.config.prod.js --config-name=modern",
    "build:legacy": "webpack --config=webpack.config.prod.js --config-name=legacy",
    "dev": "run-p dev:*",
    "dev:modern": "webpack-dev-server --config=webpack.config.dev.js --config-name=modern",
    "dev:legacy": "webpack-dev-server --config=webpack.config.dev.js --config-name=legacy"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@hugojosefson/merge-html": "^2.0.3",
    "babel-loader": "^8.1.0",
    "babel-preset-solid": "^0.18.12",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.6.0",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "rimraf": "^3.0.2",
    "script-ext-html-webpack-plugin": "^2.1.4",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^3.0.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "core-js": "3",
    "lit-dom-expressions": "^0.19.7",
    "regenerator-runtime": "^0.13.5",
    "serve": "^11.3.2",
    "solid-js": "^0.18.12"
  },
  "browserslist": {
    "legacy": [
      "ie 10",
      "firefox 40"
    ],
    "modern": [
      "chrome 61",
      "firefox 60",
      "edge 16",
      "safari 10.1"
    ]
  },
  "engines": {
    "node": ">=14.4"
  }
}
